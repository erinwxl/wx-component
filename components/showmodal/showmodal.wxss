/* component/showmodal.wxss */
.show-dialog{
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .6);
    position: absolute;
    left: 0;
    top: 0;
}
.wx-dialog-box{
    width: 80%;
    height: 360rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -40%;
    margin-top: -180rpx;
    background: #fff;
    border-radius: 10rpx;
}
.wx-dialog-title{
    height: 100rpx;
    line-height: 100rpx;
    color: #333;
    text-align: center;
    font-size: 36rpx;
}
.wx-dialog-content{
    height: 160rpx;
    text-align: center;
    font-size: 36rpx;
}
.wx-dialog-footer{
    display: flex;
    align-items: center;
    position: relative;
    line-height: 100rpx;
    font-size: 36rpx;
    text-align: center;
}
.wx-dialog-footer::before{
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1rpx;
    border-top: 1rpx solid #D5D5D6;
    color: #D5D5D6;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}
.wx-dialog-btn{
    display: block;
    -webkit-flex: 1;
    flex: 1;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    position: relative;
}
.wx-dialog-footer .wx-dialog-btn:nth-of-type(1){
    color: #353535;
}
.wx-dialog-footer .wx-dialog-btn:nth-of-type(2){
    color: #3CC51F;
}
.wx-dialog-footer .wx-dialog-btn:nth-of-type(2):after{
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1rpx;
    bottom: 0;
    border-left: 1rpx solid #D5D5D6;
    color: #D5D5D6;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleX(0.5);
    transform: scaleX(0.5);
}